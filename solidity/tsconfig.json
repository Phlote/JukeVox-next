{
  "compilerOptions": {
    "paths": {
      "$/*": ["./src/*"]
    },
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "noEmit": true,
    "composite": true,
    "incremental": true
  },
  "include": [
    "./hardhat.config.ts",
    "./src",
    "./deploy",
    "./scripts",
    "./test",
    "./typeschain"
  ]
}
